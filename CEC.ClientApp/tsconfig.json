{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,

    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    //"strict": false, //rupom uporerta temporary comment and attribute ta k false korse for publishing
    //"noUnusedLocals": true,
    "noUnusedLocals": false, //rupom uporerta temporary comment and attribute ta k false korse for publishing
    //"noUnusedParameters": true,  //rupom uporerta temporary comment and attribute ta k false korse for publishing
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
    // "noFallthroughCasesInSwitch": false //rupom uporerta temporary comment and attribute ta k false korse for publishing
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    ".eslintrc.cjs",
    "./tailwind.config.js",
    "./postcss.config.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
